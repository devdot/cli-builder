{
    "name": "devdot/cli-builder",
    "description": "Tools for development of devdot/cli.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Devdot\\Cli\\Builder\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Thomas Kuschan",
            "email": "mail@thomaskuschan.de"
        }
    ],
    "require": {
        "devdot/cli": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^11.3",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "scripts": {
        "post-create-project-cmd": "mv .gitattributes.dist .gitattributes",
        "check-static": "phpstan analyse src --level=9",
        "format": "phpcbf --standard=PSR12 src tests",
        "test": "phpunit tests"
    },
    "config": {
        "sort-packages": true
    }
}
